<div class="container">
  <div class="row">
    <div class="title"><h4>MY FLIGHTS</h4></div>
      <!-- <div class="flight"> -->
        <% if @flights.empty? %>
          <span style="line-height: 250px; margin-left: 30px;">You currently have no flights.</span>
        <% end %>
        <% @flights.each do |f| %>
          <%= f.origin %><br>
          <%= f.destination %><br>
          <% if f.destination == "London, UK (LDN)" %>
            <%= "Sept 5, 2014" %> <br>
          <% elsif f.destination == "Tokyo, JA (HND)" %>
            <%= "Sept 19 5, 2014" %> <br>
          <% elsif f.destination == "Hong Kong, CN (HKG)" %>
            <%= "Oct 12, 2014" %> <br>
          <% elsif f.destination == "Abu Dhabi, AE (AZI)" %>
            <%= "Nov 3, 2014" %> <br>
          <% elsif f.destination == "Milan, IT (MXP)" %>
            <%= "Dec 20, 2014" %> <br>
          <% end %>
          <%= f.seat %><br>
          <%= link_to "Boarding Pass", flight_path(f.id) %><br>
          <hr>
        <% end %>
      <!-- </div> -->
  </div>
</div>
